# =============================================================================
# Vizly Backend Environment Configuration
# Copy this file to .env and update with your values
# IMPORTANT: Never commit .env to version control
# =============================================================================

# =============================================================================
# SECURITY SETTINGS (REQUIRED)
# =============================================================================

# Django Secret Key - REQUIRED, no default
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=

# Encryption Salt for database credentials - REQUIRED for production
# Generate with: python -c 'import os, base64; print(base64.b64encode(os.urandom(32)).decode())'
# This will be auto-generated on first run if not set, but should be saved to persist encryption
ENCRYPTION_SALT=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated, required in production)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Internal Vizly database (SQLite for dev, PostgreSQL recommended for production)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL example (recommended for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/vizly

# =============================================================================
# QUERY EXECUTION LIMITS
# =============================================================================

# Maximum query execution timeout in seconds
MAX_QUERY_TIMEOUT=30

# Maximum rows returned per query
MAX_RESULT_ROWS=10000

# Database connection pool settings
CONNECTION_POOL_SIZE=5
CONNECTION_POOL_MAX_OVERFLOW=10
